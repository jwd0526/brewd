{
  "name": "@brewd/frontend",
  "version": "0.1.0",
  "private": true,
  "description": "Brewd frontend monorepo",
  "workspaces": [
    "native",
    "web",
    "packages/*"
  ],
  "scripts": {
    "build:packages": "cd packages && ./build-all.sh",
    "dev:web": "npm run dev --workspace=web",
    "dev:native": "npm run start --workspace=native",
    "build:web": "npm run build:packages && npm run build --workspace=web",
    "build:native": "npm run build:packages && npm run build --workspace=native --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present"
  },
  "engines": {
    "node": ">=23.0.0",
    "npm": ">=10.0.0"
  }
}
